<!DOCTYPE html>
<html lang="es">
    <!DOCTYPE html>
    <html lang="es">
      <%- include('partials/head') %> 
    
    <body>
      <!--COMIENZA HEADER-->
      <%- include('partials/header') %>

      <!--CARGA PRODUCTO -->

      <br><br>

    <div class="container cargaProducto">
        <section class="principal">
            <div class="col-12 mensaje">
                <h3>INGRESAR PRODUCTOS</h3>
            </div>
            <div class="row carga">

                <div class="col-12 contenido">
                    <div class="contenido text-left">
                        <div class="row">
                            <div class="col-12 "> <br>
                                <h4 class="mb-3">Datos del Producto</h4>
                                <form action="" method="POST">
                                    <div class="form-group">
                                        <label for="exampleFormControlInput1">Nombre del Producto</label>
                                        <input type="text" class="form-control" id="exampleFormControlInput1"
                                            placeholder="" name="name">
                                    </div>
                                    <div class="form-group mt-3">
                                        <label for="exampleFormControlTextarea1">Descripción</label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                            name="description"></textarea>
                                    </div>



                                    <div class="form-row">
                                        <div class="col">
                                            <label for="">Precio</label>
                                            <input type="number" class="form-control" name="price">
                                        </div>
                                        <div class="col">
                                            <label for="">Descuento</label>
                                            <input type="number" class="form-control" name="discount">
                                        </div>
                                    </div>

                                    <br>

                                    <div class="form-group">
                                        <label>Categoría</label>
                                        <select name="Categoría">
                                            <option value="anillo">Anillos</option>
                                            <option value="brazalete">Brazaletes</option>
                                            <option value="collar">Collares</option>
                                            <option value="arete">Aretes</option>
                                            <option value="coleccion">Colección</option>

                                        </select>
                                    </div>


                                    <div class="form-group mt-3 ">
                                        <label for="">Elija una imagen</label>
                                        <input type="file" class="form-control" name='image'>
                                    </div>



                                    <div class="mt-5 mr-5 d-flex justify-content-end ">
                                        <button type="reset" class="btn btn-outline-secondary mr-3">Borrar</button>
                                        <button type="submit" class="btn btn-outline-primary botonAgregar">Agregar
                                            producto</button>
                                    </div> <br>


                                </form>
                            </div>


                        </div>

                    </div>

                </div>
            </div>

    </div>
    </section>
    </div>
    <br><br>
      
      <%- include('partials/footer') %>
</body>
</html>